<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.homeDetail.HomeDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/fragment_hor_ver_margin"
        android:elevation="@dimen/fragment_hor_ver_margin"
        android:layout_height="wrap_content">

    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/fragment_hor_ver_margin"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                app:riv_border_color="@color/cardview_shadow_start_color"
                app:riv_border_width="2dp"
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                app:riv_corner_radius="8dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/frag_home_detail_iV"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextviewStyle"
                    android:layout_margin="@dimen/fragment_hor_ver_margin"
                    android:id="@+id/frag_home_detail_title_tV"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginBottom="@dimen/fragment_hor_ver_margin"
                android:id="@+id/frag_home_detail_desc_tV"/>

        </LinearLayout>
    </ScrollView>
    </androidx.cardview.widget.CardView>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/frag_home_detail_pB"/>

</FrameLayout>