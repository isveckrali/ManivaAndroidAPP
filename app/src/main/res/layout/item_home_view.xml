<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/home_welcome_banner_cV"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="@dimen/common_margin"
        android:background="@drawable/card_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="8dp"
        android:elevation="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:layout_margin="@dimen/common_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_baseline_portfolio_24"
            android:id="@+id/home_welcome_banner_iV"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="@dimen/common_margin"
            android:layout_gravity="center_horizontal|bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextviewStyle"
                android:textAlignment="center"
                android:text="@string/welcome_page_content"/>

            <Button
                android:layout_width="wrap_content"
                style="@style/ButtonStyle"
                android:background="@drawable/btn_gradient"
                android:text="@string/welcome_page_title"
                android:layout_height="wrap_content">
            </Button>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>